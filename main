# 1. Update system
sudo apt update && sudo apt upgrade -y

# 2. Install Python & Jupyter via apt (system-wide)
sudo apt install -y python3 python3-pip python3-venv jupyter-notebook

# 3. (Optional) If you install via pip in addition:
# sudo pip3 install --upgrade pip
# sudo pip3 install notebook

# 4. Install VS Code:
sudo apt install -y wget gpg
wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > packages.microsoft.gpg
sudo install -o root -g root -m 644 packages.microsoft.gpg /usr/share/keyrings/
echo "deb [arch=amd64 signed-by=/usr/share/keyrings/packages.microsoft.gpg] \
https://packages.microsoft.com/repos/code stable main" | sudo tee /etc/apt/sources.list.d/vscode.list
rm packages.microsoft.gpg
sudo apt update
sudo apt install -y code

# 5. Add shortcut alias for notebook
echo "alias jn='jupyter notebook'" >> ~/.bashrc
source ~/.bashrc
